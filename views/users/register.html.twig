{% extends "base.html.twig" %}

{% block title %}
    TATO LOGIN
{% endblock %}

{% block content %}
    <h2>{{ redirect }}</h2>
    {% if register %}
    <form class="form-signin" action="/user/register" method="POST">
        <h2 class="form-signin-heading">Please Register</h2>
    {% else %}
    <form class="form-signin" action="/user/login" method="POST">
        <h2 class="form-signin-heading">Please sign in</h2>
    {% endif %}
        <label for="inputUsername" class="sr-only">Username</label>
        <input name="username" value="{{ username }}" type="text" id="inputUsername" class="form-control" placeholder="Username" required autofocus>
        {% if register %}
        <br />
        <label for="inputEmail" class="sr-only">Email address</label>
        <input name="email" value="{{ email }}" type="email" id="inputEmail" class="form-control" placeholder="Email address" required>
        {% endif %}
        <br />
        <label for="inputPassword" class="sr-only">Password</label>
        <input name="password" type="password" id="inputPassword" class="form-control" placeholder="Password" required>
        {% if redirect %}
        <input type="hidden" name="redirect" value="{{ redirect }}" />
        {% endif %}
        {% if register %}
        <br />
        <label for="inputPassword2" class="sr-only">Repeat Password</label>
        <input name="password2" type="password" id="inputPassword2" class="form-control" placeholder="Repeat Password" required>
        <br />
        <button class="btn btn-lg btn-success btn-block" type="submit">Register</button>
        {% else %}
        <div class="checkbox">
            <label>
                <input name="remember" type="checkbox" value="remember"> Remember me
            </label>
        </div>

        <button class="btn btn-lg btn-success btn-block" type="submit">Login</button>
        <br />
        <button class="btn btn-lg btn-primary btn-block" name="register" type="submit">Register</button>
        {% endif %}
        <br />
        {% if error %}
            <div class="alert alert-danger" role="alert">
                <strong>Error: </strong>{{ error }}
            </div>
        {% endif %}
    </form>
{% endblock %}