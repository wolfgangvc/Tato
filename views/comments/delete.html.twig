{% extends "base.html.twig" %}

{% block title %}
    TATO DELETE COMMENT : {{ comment.title }}
{% endblock %}

{% block content %}
    <div>
        <h2> Delete Comment : {{ comment.title }}</h2>
        <form action="" method="POST">
            <input type="hidden" name="comment_id" value="{{ comment.comment_id }}">
            <div class="form-group">
                <label for="title">Enter title of comment to Delete : </label>
                <input name="title" type="text" class="form-control" id="title"
                       placeholder="{{ comment.title }}">
            </div>
            {% if deleteFail == true %}
                <div class="alert alert-danger" role="alert">
                    <strong>Failed : </strong> Title not correct
                </div>
            {% endif %}
            <a class="btn btn-primary" href="/post/{{ comment.post_id }}">Cancel</a>
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
{% endblock %}